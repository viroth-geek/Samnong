<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Samnong" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/green</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Style.App.Toolbar</item>
        <item name="fontFamily">@font/krasar_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="actionBarStyle">@style/Style.App.ActionBar</item>
        <item name="chipStyle">@style/Style.App.Chip</item>

    </style>

    <style name="FullScreenDialogStyle" parent="Theme.Samnong">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/green</item>
        <item name="android:windowIsFloating">false</item>
        <item name="statusBarForeground">@color/green</item>
        <item name="android:statusBarColor">@color/green</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Style.App.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Style.App.ToolbarTitle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Style.App.MainTitle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Style.App.BodyMainTitle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Style.App.BodyTitle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Style.App.ToolbarMenu" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Style.App.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <!--        <item name="colorControlHighlight">@color/white</item>-->
    </style>

    <!--    Text view-->
    <style name="Style.App.LinkText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/green</item>
    </style>

    <!--    button style-->
    <style name="Style.App.ImageButton" parent="">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="contentDescription">@null</item>
    </style>

    <style name="Style.App.OutLineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Style.App.FillButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:padding">14dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="rippleColor">@color/green_background</item>
    </style>

    <style name="Style.App.Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/krasar_medium</item>
    </style>

</resources>